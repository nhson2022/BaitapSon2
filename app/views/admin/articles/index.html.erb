<div style="color: green"><%= notice %></div>
<div class="container">
	<div class="row align-items-start">
		<div class="col-4">
			<h2>Articles</h2>
		</div>
		<div class="col-8 text-end">
			<%= link_to "New article", new_admin_article_path, class: "btn btn-primary" %>
		</div>
	</div>
</div>
<div id="articles">
	<% @articles.each do |article| %>
		<%= render article %>
		<p>
			<%= link_to "Show this article", admin_article_path(article), class: "btn btn-info" %>
		</p>
	<% end %>
</div>
