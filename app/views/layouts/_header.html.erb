<body>
	<div class="container">
		<header class="blog-header lh-1 py-3">
			<div class="row flex-nowrap justify-content-between align-items-center">
				<div class="col-4 pt-1">
					<a class="link-secondary text-decoration-none text-primary" href=" <%= info_path %>">Ruby Dev</a>
				</div>
				<div class="col-4 text-center">
					<img src="<%= image_path("bootstrap-logo-black.png")%>" width="38" height="30" class="me-3" alt="Bootstrap">
					<h4><a class="blog-header-logo text-dark text-decoration-none" href="/">My Blogs</a></h4>
				</div>
				<div class="col-4 d-flex justify-content-end align-items-center">
					<a class="link-secondary" href="#" aria-label="Search">
						<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="mx-3" role="img" viewBox="0 0 24 24"><title>Search</title><circle cx="10.5" cy="10.5" r="7.5"/><path d="M21 21l-5.2-5.2"/></svg>
					</a>
					<% if current_user.present? %>
						<span class="text-blue mx-2"><%= current_user.email %></span>
						<%= button_to "Sign out", destroy_user_session_path, method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure sign out?"}, class: 'btn btn-danger' %>
					<% else %>
						<a class="btn btn-sm btn-outline-success" href="<%= new_user_registration_path %>">Sign up</a>
						<a class="btn btn-sm btn-outline-secondary" href="<%= new_user_session_path %>">Sign in</a>
					<% end %>
				</div>
			</div>
		</header>
	</div>
	<div class="nav-scroller py-1 mb-2">
		<nav class="nav d-flex justify-content-between">
			<a class="p-2 link-secondary text-decoration-none" href="<%= root_path %>">Home</a>
			<a class="p-2 link-secondary text-decoration-none" href="<%= admin_articles_path %>">Articles</a>
			<a class="p-2 link-secondary text-decoration-none" href="#">Category</a>
		</nav>
	</div>
</body>
